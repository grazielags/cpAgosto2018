algoritmo "semnome"
var
n1: inteiro
inicio
Escreva("Digite um número: ")
Leia(n1)
se (n1 mod 2 = 0) entao
   Escreva("O número digitado é par.")
senao
     Escreva("O número digitado é ímpar.")
fimse
Escreval(" ")
se (n1 >= 0) entao
   Escreva("O número digitado é positivo.")
senao
     Escreva("O número digitado é negativo.")
fimse
fimalgoritmo
