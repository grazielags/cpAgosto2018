algoritmo "exercicio7"

var
   base, altura: inteiro
   areatriangulo: real

inicio
      Escreval ("Digite valor para base do triangulo:")
      leia (base)
      Escreval ("Digite valor para altura do triangulo:")
      leia (altura)
      areatriangulo <- (base*altura)/2
      Escreval ("Area do triangulo =", areatriangulo)
fimalgoritmo
